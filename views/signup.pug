extends base

block content

    .form.auth
        header.form__header Sign Up To MVC Auth
        form.form__control(action="/auth/signup" method="post")
            .form__group
                label.form__label(for="name") Name
                input.form__input(type="name" id="name" name="name")
            .form__group
                label.form__label(for="email") Email
                input.form__input(type="email" id="email" name="email")
            .form__group
                label.form__label(for="password") Password
                input.form__input(type="password" id="password" name="password")
            .form__group
                label.form__label(for="places") Location
                input.form__input(type="text" id="places" name="places")
            .form__actions
                button.btn.btn__tertiary.form__button(type="submit") Sign Up
                a.form__switch(href="/auth/login") Already A Member? Switch to log in.
